<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/lightgrey</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="mydatepickerdialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="popup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/lightgrey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>
b
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Full width -->
        <item name="android:layout_width">fill_parent</item>

        <!-- Null window background kills surrounding padding -->
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="mySeekBarTheme" parent="Base.Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/redtint</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat">
        <item name="android:spinnerItemStyle">@style/SpinnerThemeItem</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerThemeItem" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/SpinnerThemeTextAppearance</item>
    </style>

    <style name="SpinnerThemeTextAppearance" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

</resources>
