<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.takusemba.cropme.CropView
        android:id="@+id/cropView_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cropme_background_alpha="80%"
        app:cropme_max_scale="2"
        app:cropme_result_height="80%"
        app:cropme_result_width="70%"
        app:cropme_with_border="true"
        app:layout_constraintBottom_toTopOf="@+id/gridview_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8"
        app:layout_constraintVertical_bias="0.85" />

    <GridView
        android:id="@+id/gridview_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        android:columnWidth="@dimen/_60sdp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/_8sdp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cropView_profile" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Crop image"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/crop_profile_img_delete"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_white" />

    <TextView
        android:id="@+id/crop_profile_img_empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You do not have any pictures"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/gridview_profile"
        app:layout_constraintStart_toEndOf="@+id/gridview_profile"
        app:layout_constraintTop_toTopOf="@+id/gridview_profile" />

    <ImageButton
        android:id="@+id/crop_profile_img_accept"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintEnd_toEndOf="@+id/toolbar8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/checkmark_white" />

</android.support.constraint.ConstraintLayout>