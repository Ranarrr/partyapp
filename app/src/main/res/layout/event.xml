<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkalpha"
        android:paddingStart="@dimen/_5sdp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2">

        <TextView
            android:id="@+id/datoText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@color/darkalpha"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:text="Dato"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/hostText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/stedText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stedText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@color/darkalpha"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:text="Sted"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/datoText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hostText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_18sdp"
            android:background="@color/darkalpha"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:text="Host"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/datoText"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventText"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/event" />

</RelativeLayout>